<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Investment</title>
    <link rel="stylesheet" href="/styles/profile.css" />
    <link rel="stylesheet" href="/styles/transaction.css" />
  </head>
  <body>
    <%- include("_nav.ejs") %>
    <main class="main-1">
      <section class="container-1"><%- include("_sidebar.ejs") %></section>
      <section>
        <hr />

        <div class="container3">
          <h2>Investment</h2>
          <form id="investment-form">
            <input type="date" id="date" placeholder="Date" required />
            <input
              type="text"
              id="investment-name"
              placeholder="Investment Name"
              required
            />
            <input
              type="text"
              id="income-source"
              placeholder="Income Source"
              required
            />
            <input
              type="number"
              id="investment-amount"
              placeholder="Amount"
              required
            />
            <button type="submit">Add Investment</button>
          </form>
          <div class="investment-table">
            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Investment Name</th>
                  <th>Income Source</th>
                  <th>Amount</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody id="investment-list"></tbody>
            </table>
            <div class="total-amount">
              <strong>Total:</strong>
              Ksh. <span id="total-amount">0</span>
            </div>
          </div>
        </div>
        <hr />
      </section>
    </main>

    <%- include("footer.ejs") %>

    <script src="/javascript/investment.js"></script>
  </body>
</html>
