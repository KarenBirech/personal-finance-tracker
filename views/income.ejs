<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Income</title>
    <link rel="stylesheet" href="/styles/profile.css" />
    <link rel="stylesheet" href="/styles/transaction.css" />
  </head>
  <body>
    <%- include("_nav.ejs") %>
    <main class="main-1">
      <section class="container-1"><%- include("_sidebar.ejs") %></section>
      <section>
        <h1>Income</h1>
        <hr />
        <div class="container1">
          <form id="income-form">
            <input
              type="date"
              id="date"
              name="date"
              placeholder="Date"
              required
            />
            <input
              type="text"
              id="income-name"
              name="incomeName"
              placeholder="Income Name"
              required
            />
            <input
              type="number"
              id="income-amount"
              name="incomeAmount"
              placeholder="Amount"
              required
            />
            <button type="submit">Add Income</button>
          </form>
          <div class="income-table">
            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Income Name</th>
                  <th>Amount</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody id="income-list"></tbody>
            </table>
            <div class="total-amount">
              <strong>Total:</strong>
              Ksh. <span id="total-amount">0</span>
            </div>
          </div>
        </div>
        <hr />
      </section>
    </main>

    <%- include("footer.ejs") %>
  </body>
</html>
