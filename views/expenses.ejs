<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expenses</title>
    <link rel="stylesheet" href="/styles/profile.css" />
    <link rel="stylesheet" href="/styles/transaction.css" />
  </head>
  <body>
    <%- include("_nav.ejs") %>
    <main class="main-1">
      <section class="container-1"><%- include("_sidebar.ejs") %></section>
      <section>
        <div class="container2">
          <h1>Expenses</h1>
          <form id="expense-form" action="/add-expense" method="post">
            <input
              type="date"
              id="date"
              name="date"
              placeholder="Date"
              required
            />
            <input
              type="text"
              id="expense-name"
              name="expenseName"
              placeholder="Expense Name"
              required
            />
            <input
              type="text"
              id="income-source"
              name="incomeName"
              placeholder="Income Source"
              required
            />
            <input
              type="number"
              id="expense-amount"
              name="expenseAmount"
              placeholder="Amount"
              required
            />
            <button type="submit">Add Expense</button>
          </form>
          <div class="expense-table">
            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Expense Name</th>
                  <th>Income Source</th>
                  <th>Amount</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody id="expense-list">
                <% expenses.forEach(function(expense) { %>
                <tr>
                  <td><%= expense.date %></td>
                  <td><%= expense.expenseName %></td>
                  <td><%= expense.incomeName %></td>
                  <td>Ksh. <%= expense.expenseAmount %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <div class="total-amount">
              <strong>Total:</strong>
              Ksh. <span id="total-amount">0</span>
            </div>
          </div>
        </div>
      </section>
    </main>

    <%- include("footer.ejs") %>

    <script src="/javascript/expenses.js"></script>
  </body>
</html>
