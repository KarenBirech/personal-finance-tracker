<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expenses</title>
    <link rel="stylesheet" href="/styles/profile.css" />
    <link rel="stylesheet" href="/styles/transaction.css" />
  </head>
  <body>
    <%- include("_nav.ejs") %>
    <main class="main-1">
      <section class="container-1"><%- include("_sidebar.ejs") %></section>
      <section>
        <div class="container2">
          <h1>Expenses</h1>
          <form id="expense-form">
            <input type="date" id="date" placeholder="Date" required />
            <input
              type="text"
              id="expense-name"
              placeholder="Expense Name"
              required
            />
            <input
              type="text"
              id="income-name"
              placeholder="Income Name"
              required
            />
            <input
              type="number"
              id="expense-amount"
              placeholder="Amount"
              required
            />
            <button type="submit">Add Expense</button>
          </form>
          <div class="expense-table">
            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Expense Name</th>
                  <th>Income Source</th>
                  <th>Amount</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody id="expense-list"></tbody>
            </table>
            <div class="total-amount">
              <strong>Total:</strong>
              Ksh. <span id="total-amount">0</span>
            </div>
          </div>
        </div>
      </section>
    </main>

    <%- include("footer.ejs") %>
  </body>
</html>
