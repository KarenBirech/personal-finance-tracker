<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Transactions</title>
    <link rel="stylesheet" href="/styles/transaction.css" />
  </head>
  <body>
    <%- include("_nav.ejs") %>

    <h1>Transactions</h1>
    <hr />
    <div class="container1">
      <h2>Income</h2>
      <form id="income-form">
        <input type="date" id="date" placeholder="Date" required />
        <input
          type="text"
          id="income-name"
          placeholder="Income Name"
          required
        />
        <input type="number" id="income-amount" placeholder="Amount" required />
        <button type="submit">Add Income</button>
      </form>
      <div class="income-table">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Income Name</th>
              <th>Amount</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="income-list"></tbody>
        </table>
        <div class="total-amount">
          <strong>Total:</strong>
          Ksh. <span id="total-amount">0</span>
        </div>
      </div>
    </div>
    <hr />

    <div class="container2">
      <h2>Expense</h2>
      <form id="expense-form">
        <input type="date" id="date" placeholder="Date" required />
        <input
          type="text"
          id="expense-name"
          placeholder="Expense Name"
          required
        />
        <input
          type="text"
          id="income-name"
          placeholder="Income Name"
          required
        />
        <input
          type="number"
          id="expense-amount"
          placeholder="Amount"
          required
        />
        <button type="submit">Add Expense</button>
      </form>
      <div class="expense-table">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Expense Name</th>
              <th>Income Source</th>
              <th>Amount</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="expense-list"></tbody>
        </table>
        <div class="total-amount">
          <strong>Total:</strong>
          Ksh. <span id="total-amount">0</span>
        </div>
      </div>
    </div>
    <hr />

    <div class="container3">
      <h2>Investment</h2>
      <form id="investment-form">
        <input type="date" id="date" placeholder="Date" required />
        <input
          type="text"
          id="investment-name"
          placeholder="Investment Name"
          required
        />
        <input
          type="text"
          id="income-name"
          placeholder="Income Name"
          required
        />
        <input
          type="number"
          id="investment-amount"
          placeholder="Amount"
          required
        />
        <button type="submit">Add Investment</button>
      </form>
      <div class="investment-table">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Investment Name</th>
              <th>Income Source</th>
              <th>Amount</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="investment-list"></tbody>
        </table>
        <div class="total-amount">
          <strong>Total:</strong>
          Ksh. <span id="total-amount">0</span>
        </div>
      </div>
    </div>

    <%- include("footer.ejs") %>
  </body>
</html>
